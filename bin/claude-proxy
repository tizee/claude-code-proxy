#!/bin/zsh

# Claude Code Proxy - Global access script
# Simple version that just runs make commands from anywhere

set -e

# Color codes
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Find the actual directory where this script is located
if [[ -L "$0" ]]; then
    # Script is a symlink, resolve to actual file location
    LOCAL_PATH=$(readlink "$0")
    if [[ ! "$LOCAL_PATH" == /* ]]; then
        LOCAL_PATH=$(dirname "$0")/$LOCAL_PATH
    fi
    LOCAL_PATH=$(realpath "$LOCAL_PATH")
else
    # Script is run directly
    LOCAL_PATH=$(realpath "$0")
fi

SCRIPT_DIR=$(dirname "$LOCAL_PATH")
PROJECT_DIR=$(dirname "$SCRIPT_DIR")

DEFAULT_PORT=8082

usage() {
    echo -e "ã€Claude Code Proxy å¯åŠ¨å™¨ã€‘

${GREEN}ç”¨æ³•:${NC}
  claude-proxy [é€‰é¡¹]

${GREEN}é€‰é¡¹:${NC}
  -h, --help     æ˜¾ç¤ºæ­¤å¸®åŠ©ä¿¡æ¯
  -d, --dev      å¼€å‘æ¨¡å¼ï¼ˆè‡ªåŠ¨é‡è½½ï¼‰
  -p, --port     æŒ‡å®šç«¯å£å·ï¼ˆé»˜è®¤: $DEFAULT_PORTï¼‰
  --docker       ä½¿ç”¨ Docker å¯åŠ¨
  -v, --version  æ˜¾ç¤ºç‰ˆæœ¬ä¿¡æ¯

${GREEN}ç¤ºä¾‹:${NC}
  claude-proxy           # å¯åŠ¨æœåŠ¡å™¨ï¼Œç›‘å¬ $DEFAULT_PORT ç«¯å£
  claude-proxy -d        # å¼€å‘æ¨¡å¼å¯åŠ¨
  claude-proxy -p 8080   # è‡ªå®šä¹‰ç«¯å£å·
  claude-proxy --docker  # ä½¿ç”¨ Docker å¯åŠ¨

${YELLOW}é…ç½®è¯´æ˜:${NC}
  è¯·åœ¨é¡¹ç›®ç›®å½•ä¸‹çš„ .env æ–‡ä»¶ä¸­é…ç½® API å¯†é’¥å’Œæ¨¡å‹è®¾ç½®
  é¡¹ç›®ç›®å½•: $PROJECT_DIR

${YELLOW}è¿æ¥ Claude Code:${NC}
  export ANTHROPIC_BASE_URL=http://localhost:8082
  claude"
}

version() {
    echo -e "${GREEN}Claude Code Proxyå¯åŠ¨å™¨ v1.0.0${NC}"
    echo -e "é¡¹ç›®åœ°å€: ${BLUE}https://github.com/tizee/claude-code-proxy${NC}"
}

check_dependencies() {
    local missing_deps=()

    if ! command -v python3 &> /dev/null; then
        missing_deps+=("python3")
    fi

    if ! command -v uv &> /dev/null; then
        missing_deps+=("uv")
    fi

    if [[ ${#missing_deps[@]} -gt 0 ]]; then
        echo -e "${RED}é”™è¯¯: ç¼ºå°‘ä¾èµ–é¡¹: ${missing_deps[*]}${NC}"
        echo -e "${YELLOW}è¯·å®‰è£…:"
        echo -e "  ${NC}Python:  ${BLUE}https://python.org/downloads/${NC}"
        echo -e "  ${NC}uv:      ${BLUE}curl -LsSf https://astral.sh/uv/install.sh | sh${NC}"
        exit 1
    fi
}

start_dev_server() {
    local port=$1
    echo -e "${BLUE}ğŸš€ å¯åŠ¨å¼€å‘æ¨¡å¼æœåŠ¡å™¨...${NC}"
    echo -e "${YELLOW}ç«¯å£: ${port}${NC}"
    echo -e "${YELLOW}æ¨¡å¼: å¼€å‘ï¼ˆè‡ªåŠ¨é‡è½½ï¼‰${NC}"

    cd "$PROJECT_DIR"

    if [[ ! -f ".env" ]]; then
        echo -e "${YELLOW}âš ï¸  æ£€æµ‹åˆ°ç¼ºå°‘ .env æ–‡ä»¶${NC}"
        if [[ -f ".env.example" ]]; then
            cp .env.example .env
            echo -e "${GREEN}âœ… å·²åˆ›å»º .env æ–‡ä»¶ï¼Œè¯·ç¼–è¾‘é…ç½® API å¯†é’¥${NC}"
        else
            echo -e "${RED}é”™è¯¯: æ‰¾ä¸åˆ° .env.example æ–‡ä»¶${NC}"
            exit 1
        fi
    fi

    make dev
}

start_production_server() {
    local port=$1
    echo -e "${BLUE}ğŸš€ å¯åŠ¨ç”Ÿäº§æ¨¡å¼æœåŠ¡å™¨...${NC}"
    echo -e "${YELLOW}ç«¯å£: ${port}${NC}"

    cd "$PROJECT_DIR"

    if [[ ! -f ".env" ]]; then
        echo -e "${YELLOW}âš ï¸  æ£€æµ‹åˆ°ç¼ºå°‘ .env æ–‡ä»¶${NC}"
        if [[ -f ".env.example" ]]; then
            cp .env.example .env
            echo -e "${GREEN}âœ… å·²åˆ›å»º .env æ–‡ä»¶ï¼Œè¯·ç¼–è¾‘é…ç½® API å¯†é’¥${NC}"
            echo -e "${YELLOW}æç¤º: è¯·ä½¿ç”¨ç¼–è¾‘å™¨æ‰“å¼€ .env æ–‡ä»¶å¹¶å¡«å…¥ API å¯†é’¥${NC}"
        else
            echo -e "${RED}é”™è¯¯: æ‰¾ä¸åˆ° .env.example æ–‡ä»¶${NC}"
            exit 1
        fi
    fi

    export PORT=$port
    make restart
}

start_docker() {
    local port=$1
    echo -e "${BLUE}ğŸ³ ä½¿ç”¨ Docker å¯åŠ¨...${NC}"

    if ! command -v docker &> /dev/null; then
        echo -e "${RED}é”™è¯¯: æœªå®‰è£… Docker${NC}"
        exit 1
    fi

    cd "$PROJECT_DIR"

    if [[ ! -f "Dockerfile" ]]; then
        echo -e "${YELLOW}âš ï¸  æ£€æµ‹åˆ°ç¼ºå°‘ Dockerfile${NC}"
        exit 1
    fi

    docker build -t claude-code-proxy . && \
    docker run -p "$port:$port" -e PORT=$port --env-file .env claude-code-proxy
}

# Main script logic
main() {
    local mode="production"
    local port=$DEFAULT_PORT
    local use_docker=false

    # Parse command line arguments
    while [[ $# -gt 0 ]]; do
        case $1 in
            -h|--help)
                usage
                exit 0
                ;;
            -d|--dev)
                mode="dev"
                shift
                ;;
            -p|--port)
                if [[ -z $2 ]]; then
                    echo -e "${RED}é”™è¯¯: ç¼ºå°‘ç«¯å£å·å‚æ•°${NC}"
                    exit 1
                fi
                port=$2
                shift 2
                ;;
            --docker)
                use_docker=true
                shift
                ;;
            -v|--version)
                version
                exit 0
                ;;
            *)
                echo -e "${RED}é”™è¯¯: æœªçŸ¥é€‰é¡¹: $1${NC}"
                usage
                exit 1
                ;;
        esac
    done

    # Check if this script is running from the bin directory
    if [[ ! -f "$PROJECT_DIR/pyproject.toml" ]]; then
        echo -e "${RED}é”™è¯¯: æ‰¾ä¸åˆ°é¡¹ç›®æ ¹ç›®å½•${NC}"
        echo -e "${YELLOW}è¯·ç¡®ä¿è„šæœ¬ä½äºé¡¹ç›®çš„ bin/ ç›®å½•ä¸‹${NC}"
        exit 1
    fi

    # Check dependencies
    if [[ $use_docker == false ]]; then
        check_dependencies
    fi

    echo -e "${GREEN}æ­£åœ¨å¯åŠ¨ Claude Code Proxy...${NC}"
    echo -e "${YELLOW}é¡¹ç›®ç›®å½•: $PROJECT_DIR${NC}"

    # Start the appropriate server
    if [[ $use_docker == true ]]; then
        start_docker $port
    elif [[ $mode == "dev" ]]; then
        start_dev_server $port
    else
        start_production_server $port
    fi
}

# Run main function with all arguments
main "$@"
